{
    "app-id": "com.github.gkarsay.parlatype",

    "runtime": "org.gnome.Platform",
    "runtime-version": "3.30",
    "sdk": "org.gnome.Sdk",

    "command": "parlatype",

    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",

	"--filesystem=home",

        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.freedesktop.secrets",

        "--talk-name=org.gnome.SettingsDaemon.MediaKeys"
    ],
    "build-options": {
        "cflags": "-O2 -g"
    },
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "/share/pocketsphinx",
        "/share/sphinxbase"
    ],
    "modules": [
        {
            "name": "sphinxbase",
            "config-opts": [
                "--without-python"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/cmusphinx/sphinxbase.git",
                    "branch": "master",
                    "commit": "562d0472aababa9a5fbc5b7518ea174745323e4f"
                }
            ]
        },
        {
            "name": "pocketsphinx",
            "config-opts": [
                "--without-python"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/cmusphinx/pocketsphinx.git",
                    "branch": "master",
                    "commit": "3bf4fe66ed7c31e020ffbd340f5fc1646ecd7dfb"
                }
            ]
        },
        {
            "name": "parlatype",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dlibreoffice=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/gkarsay/parlatype/releases/download/v1.6/parlatype-1.6.tar.gz",
                    "sha256": "8150aab04988b6966863f8c42fbab7a8d096b52c859929a819b19ef307f878b9"
                }
            ]
        }
    ]
}

