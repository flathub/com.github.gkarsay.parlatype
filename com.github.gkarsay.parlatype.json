{
    "app-id": "com.github.gkarsay.parlatype",

    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",

    "command": "parlatype",

    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",

	"--filesystem=home",

        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.freedesktop.secrets",

        "--talk-name=org.gnome.SettingsDaemon.MediaKeys"
    ],
    "build-options": {
        "cflags": "-O2 -g"
    },
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/pkgconfig",
        "/share/man"
    ],
    "modules": [
        {
            "name": "parlatype",
            "config-opts": [
                "--disable-introspection",
                "--without-libreoffice"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/gkarsay/parlatype/releases/download/v1.5.4/parlatype-1.5.4.tar.gz",
                    "sha256": "6f663317546215dace0cf80acaee334fd6448abbbf972dc3976e5da02515b6b9"
                }
            ]
        }
    ]
}

