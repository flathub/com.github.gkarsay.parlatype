{
    "app-id": "com.github.gkarsay.parlatype",

    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",

    "command": "parlatype",

    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",

	"--filesystem=home",

        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.freedesktop.secrets",

        "--talk-name=org.gnome.SettingsDaemon.MediaKeys"
    ],
    "build-options": {
        "cflags": "-O2 -g"
    },
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/pkgconfig",
        "/share/man"
    ],
    "modules": [
        {
            "name": "parlatype",
            "config-opts": [
                "--disable-introspection",
                "--without-libreoffice"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/gkarsay/parlatype/releases/download/v1.5.5/parlatype-1.5.5.tar.gz",
                    "sha256": "8416302349f3c97378a5a9755be08d09c23d23a4a917e8aa5d8f4aa3adf18997"
                }
            ]
        }
    ]
}

